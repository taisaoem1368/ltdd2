<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/mainLayoutPhieuDK">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        style="@style/cardView">
        <LinearLayout
            style="@style/ItemListStyle">
            <TextView
                android:id="@+id/tvIDPhieu"
                style="@style/tvID"
                android:text="@string/tvID" />
            <ImageView
                android:id="@+id/imgIDPhieu"
                style="@style/imgID" />

            <LinearLayout
                style="@style/ItemListStyleInformation">
                <TextView
                    android:id="@+id/tvSoPhieu"
                    style="@style/tvMa"
                    android:text="Số phiếu" />

                <TextView
                    android:id="@+id/tvNgayDK"
                    style="@style/tvDuoi"
                    android:text="Ngày đăng ký"/>

                <TextView
                    android:id="@+id/tvSoNguoi"
                    style="@style/tvDuoi"
                    android:text="Số người"/>

                <TextView
                    android:id="@+id/tvPhieuDKMaKH"
                    style="@style/tvDuoi"
                    android:text="@string/hintMaKH" />

                <TextView
                    android:id="@+id/tvPhieuDKMaTour"
                    style="@style/tvDuoi"
                    android:text="Mã Tour"/>
            </LinearLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>